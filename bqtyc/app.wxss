/* 搜索框提示文字样式 */ 
.search-bar {
  background-color: #FFD800;
  width: 100%;
  position: relative
}
.search {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:96%;
  height:40px;
  background-color:whitesmoke;
  margin-left: 2%;
  border:1rpx solid whitesmoke;
  border-radius: 12rpx;
}
.search-tips-wrap{
  margin-left: 2%;
  width:96%;
  /* max-height:250px; */
  background: #fff;
  position: absolute;
  top:46px;
  z-index: 10002;
  border:1rpx solid whitesmoke;
  border-radius:5rpx;
  padding:10px 0;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.20);
}
.search-tips-wrap view{
  font-size: 14px;
  line-height: 36px;
  padding-left: 5px;
  height:36px;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
  overflow:hidden;
  margin: 0 10px;
  border-bottom: 1px solid #f8f8f8
}
.search-tips-wrap view text{
  font-size:12px;
  color:#999;
  padding-left:5px;
}
.search input {
  font-size:24rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:20rpx; 
  width:96%;
} 
.search image { 
  width:14px;
  height:14px;
  padding-right:16rpx;
}

.blank-bar {
  font-size:12px;
