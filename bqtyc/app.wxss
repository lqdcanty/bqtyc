/* 主页 */  
.page {  
  position: absolute;  
  width: 100%;  
  height: 100%;  
  background-color: white;  
  z-index: 10;  
  transition: All 0.4s ease;  
  -webkit-transition: All 0.4s ease;  
}

/* 遮罩层 */  
.mask {
  display: none;
  position: fixed;
  background-color: black;    
  z-index: 10000001;    
  -moz-opacity: 0.7;    
  opacity: 0.2;    
  transition:width 2s;  
  filter: alpha(opacity=70);    
}

.mask_display_userbar {
  display: block;
  top: 0%;    
  left: 0;    
  width: 30%;    
  height: 100%;  
}

.mask_display_navigate {
  display: block;
  top: 0%;    
  left: 70%;    
  width: 30%;    
  height: 100%;  
}

