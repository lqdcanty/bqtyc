/**index.wxss**/
.top-bar {
  width: 100%;

  background-color: #FFD800;
  border: 0px solid red;
  z-index: 100;
  position: absolute;
}
.head{
  width: 100%;
}
.head .logoImg {
width:16px;
height:16px;
border-radius:100%;
}
.noNews{text-align: center;margin: 70px 0 50px;color: #999;font-size: 28rpx}
.head .logoImg,.head .text{
  display: inline-block;
  vertical-align: middle;
  line-height: 1.5;
  margin: 0 5rpx
}
.errorNetwork{
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  text-align: center;
  padding-top: 40%;
  color: #666
}
.reBtn{
  text-align:center;
font-size:14px;
border-radius:44px;
border:0!important;
