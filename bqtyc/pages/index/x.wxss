/*滚动tabs*/
.tabs {
  width: 100%;
  height:40px;
  background-color: #FFFFFF;
  white-space: nowrap;
  z-index:1000;
  margin-top: 20rpx;
  border: 0px solid red;
}
.tabs .tab {
  width:14%;
  color: #8F8F8F;
  text-align: center;
  padding:4px 3% 0; 
  font-size:28rpx;
  display:inline-block;
  line-height: 32px;
  cursor: pointer;
} 
.tabs .tab .on {
  border-bottom: 4px solid #FFD800;
  color: #000;
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 5px;
}

.row-class{
