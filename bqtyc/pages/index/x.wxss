  background-color: #FFD800;
  border: 0px solid  #2d8cf0;
}

.top-bar .title {
  padding-bottom: 20px;
  margin-top: 21px;
  text-align: center;
  justify-content: center;
  border: 0px solid yellow;
}
.banner-img{
  height: 290rpx
}
.banner-img image{
  width: 100%;
