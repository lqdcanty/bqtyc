}
.top-tags{
  overflow:hidden;white-space:nowrap;height:60rpx;margin-right:19px;width:448rpx;
}
.collapse-item-title{
  font-size: 24rpx;
  color: #737373;
  font-weight: bold;
}
.collapse-item-content{
  font-size: 12px;
  color: #444444;
}

.amount{
  color: lightgray;
  font-size: 28rpx;
}

.remark{
  color: lightgray;
  font-size: 24rpx;
