.work {
  display: flex;
  background: linear-gradient(360deg,rgba(255,255,255,1) 0%,rgba(225,224,223,1) 100%);
  padding:20px 0 10px 0; 
  flex-direction: row;
}

.categoryWrap{
   display: flex;
   color: #000;
   font-size: 20rpx;
  justify-content: space-between;
  margin-right: 19px
}

.work .avatar image {
  width: 110px;
  height: 148px;
  margin-left: 26rpx;
  margin-right: 20rpx;
  border: 0px solid blue;
  border-radius: 5rpx;
  box-shadow: 0 1px 1px darkgray;
}

.work .tag-category {
  position: fixed;
  top: 10rpx;
  left: 10rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
  border: 0px solid blue;
  z-index: 100000;
}
.dividing-line{
  background-color:#FBFBFB;

}
.weui-footer{
  padding-top: 0
}
.work .info {
  border: 0px solid red;
  display: flex;
  height: 149px;
  flex-direction: column;
  justify-content:space-between;
}

.work .info .title {
  display: block;
  font-size: 40rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;  
  overflow: hidden;
  text-overflow:ellipsis;
  color: #000;
  line-height: 1.3;
  border: 0px solid red;
  margin: 0px 19px 0 0
}
.work .info .subtitle {
  display: block;
  font-size: 26rpx;
  /* padding-top: 12rpx; */
  color: #999999;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;  
  overflow: hidden;
  text-overflow:ellipsis;
  margin-right: 19px
}

.caption-wrap{
  position: relative;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
  background-color:#fff;
}
.caption-title{
  font-weight: bold;
  padding:20px 10px;
}
.caption-wrap .edit_work {
  font-size: 12px;
  text-decoration: underline;
  position: absolute;
  right: 15px;
  top:7px
}
.panel {
  border: none
}
.tag-margin {
  display: inline-block;
  margin-right:7px;
}
.panel .head .title {
  font-size: 32rpx;color: #666;padding-left:20rpx;line-height: 52px
}
.panel .head{
  border-bottom: 1px solid rgba(243,243,243,1)
}
.panel .body {
