.refer_img{
  display: flex;
  align-items: center;
  justify-content: center;
  width:36px;
  height:36px;
  border-radius: 10rpx;
  border: 1px solid #f8f8f8;
}
.hidden{display: none}
.i-swipeout-item{
  border-bottom:#dddee1 solid 0px;
}
.workinfo {
  background:#f8f8f8!important;
}

.weui-label{
  font-size: 14px;
}
.weui-input{
  font-size: 14px;
}
.weui-select{
  font-size: 14px;
}
.textpadding{
  width: 100%;
  padding: 5px 10px;
  min-height: 60px;
  font-size: 14px;
}
.flex .tag{
  margin:0 3px;
}
.flex{
  padding-top: 5px;
}
.copyright {
  display: flex;
  flex-direction: row;
  margin-top: 8px;
  margin-left:3px;
  margin-bottom: 7px;
}
.copyright .title{
  float: left;
  width: 84px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 24rpx;
  border: 1rpx solid #bbbec4;
  background-color: #dddee1;
}
.copyright .name{
  height: 28px;
  margin-right: 3px;
  border: 1rpx solid #bbbec4;
  background-color: #F8F8F8;
  border-left: 0rpx solid #bbbec4;
}
.copyright .name input {
  height: 28px;
  color: #1c2438;
  font-family: 'Times New Roman', Times, serif;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 28rpx;
  border: 0rpx solid #bbbec4;
  background-color: #F8F8F8;
}