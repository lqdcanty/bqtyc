/* pages/copyright/related/add/x.wxss */.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  /* background-color: #f8f8f8; */
  background-color: transparent;
  width: 100%;
  font-size: 32rpx;
  line-height:1.6;
}
.swiper-item {
  width: 100%;
  padding-right: 20px;
  border: 0px solid red;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.banner{
  height: 88px;
}
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  width: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.work {
  padding-top: 4px;
  border: 0px solid red;
}
.work .head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.work .head .title {
  color: #fff;
  font-size: 28rpx;
}
.work .remark {
  color: #e0e0e0;
  font-size: 24rpx;
  padding-left:3px;
  padding-right:3px;
  padding-top:3px;
}
/*滚动tabs*/
.tabs {
  width: 100%;
  height:36px;
  background-color: #000;
  white-space: nowrap;
}
.tabs .tab {
  width:25%;
  padding-top: 4px;
  color: #fff;
  text-align: center;
  padding-left:0rpx; 
  font-size:28rpx;
  display:inline-block;
  line-height: 33px;
  cursor: pointer;
  height: 36px;
} 
.tabs .tab .on {
  border-bottom: 4px solid #4db798;
  height: 28px;
}

/* 开始 */
.copyright {
  margin-top: 7px;
  margin-left:3px;
  margin-bottom: 7px;
}
.copyright .title{
  float: left;
  width:64px;
  height: 26px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  border: 1rpx solid #bbbec4;
  background-color: #4db798;
}
.copyright .name{
  height: 26px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-right: 3px;
  border: 1rpx solid #bbbec4;
  background-color: #F8F8F8;
  border-left: 0rpx solid #bbbec4;
}

.copyright .name input {
  height: 26px;
  color: #1c2438;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 24rpx;
  border: 0rpx solid #bbbec4;
  background-color: #F8F8F8;
  width: 55%;
  min-height: 26px;
}
.clear{ clear:both} 

.copyright .box_left {
  width:49.7%;
  float: left;
}
.copyright .box_right {
  width:49.7%;
  float: right;
}
.label{
  width: 100%;
  text-align: right;
  margin-right:3px;
}
.label .tags {
  display:inline-block;
  padding:1px 5px;
  background:green;
  font-size:12px;
  color:#fff;
  border-radius:2px;
  margin-right:7px;

} 

.tag{
  background-color:#4db798;
  display: inline-block;
  color:#fff;
  height:18px;
  line-height: 18px;
}
.swiper-item{
  padding-right: 0;
}
.tabs .tab .on{
  border-bottom:4px solid #4db798;
}
.weui-footer{
  margin-bottom: 50px;
}
.swiper-item{
  padding-top: 40px;
}
.select{
  width: 30%!important;
  text-align: left;
}
.mrl3{
  margin-left: 3px;
}
.copyright .name .right{
  float:right;
  background-color: #F8F8F8;
}
.copyright .name .right .status{
  float:left;
  text-align: center;
  height: 100%;
  line-height: 100%;
  padding-left: 5px;
  padding-right: 5px;
  background-color: #eee;
}
.copyright .name .right .more{
  float:right;
  text-align: center;
  height: 100%;
  line-height: 100%;
  padding-left: 5px;
  padding-right: 5px;
  font-size:12px;
  background-color: #19be6b;
}
.more.white{
  background:#fff!important;
  padding: 5px 5px;
}
.boxText{
  display: inline-block;
  vertical-align: middle;
  font-size: 12px;
  line-height: 26px;
}
.boxRadio{
  display: inline-block;
  vertical-align: middle;
  width: 12px;
  height:12px;
  border: 1px solid #f4f4f4;
  margin-left: 3px;
  background:#fff;
}
.buttonBox {
  width: 30%;
  margin:0 auto;
  margin-top: 30px;
}
.buttonY{
  height: 30px!important;
  line-height: 30px!important;
  font-size: 12px;
}
.hiddenInput{
  display: none
}
.checkBlock{
  margin-right: 5px;
  font-size: 12px;
}
.checkBlock .block .wx-checkbox-input{
  width:20px;
  height: 20px;
  margin-right: 1px; 
}