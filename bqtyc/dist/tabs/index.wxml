<scroll-view wx:if="{{ scroll }}" scroll-x="true" class="i-class i-tabs i-tabs-scroll {{ fixed ? 'i-tabs-fixed' : '' }}" style="background-color: {{backgroundColor}};border-bottom-width:{{bottomBorder}}"><slot></slot></scroll-view>
<view wx:else class="i-class i-tabs {{ fixed ? 'i-tabs-fixed' : '' }}" style="background-color: {{backgroundColor}};border-bottom:{{bottomBorder}}px solid #e9eaec;"><slot></slot></view>