.i-card{
    margin:0 16px;
    font-size:14px;
    overflow:hidden;
    position:relative;
    background:#fff;
    border-radius:5px
}
.i-card-full{
    margin:0;
    border-left:none;
    border-right:none;
    border-radius:0;
    border: 0 solid blue;
}
.i-card-header{
    display:flex;
    margin:15px 16px 3px;
    align-items:centert;
    padding-bottom: 3px;
}
.i-card-header-extra{
    width:20%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size:12px;
    color:#80848f;
    border: 0px solid red;
}
.i-card-header-thumb{
    display:inline-block;
    width:64px;
    height:64px;
    position:relative;
    margin-left:auto;
    margin-right:auto;
    overflow:hidden;
    background-size:cover;
    vertical-align:middle;
    border-radius: 4px;
}
.i-card-header-content{
    flex:1;
    display: flex;
    flex-direction: column;
    text-align:left;
    justify-content: center;
    vertical-align:middle;
    padding-left: 5px;
    border: 0px solid red;
}
.i-card-header-title{
    display: -webkit-box;
    font-size:18px;
    color:#1c2438;
    text-overflow: ellipsis;
    overflow: hidden;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 3;
    line-height: 1.4;
    -webkit-box-orient: vertical;
    font-family: 'Times New Roman', Times, serif;
    border: 0px solid blue;
    margin-bottom:5px;
}
.i-card-header-subtitle{
    display: -webkit-box;
    font-size:12px;
    color:#a0a0a0;
    text-overflow: ellipsis;
    overflow: hidden;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-family: 'Times New Roman', Times, serif;
    border: 0px solid blue;
}
.i-card-body{
    position:relative;
    padding:0px 16px 6px;
    color:#495060;
    font-size:14px
}
.i-card-body::before{
    content:'';
    position:absolute;
    top:0;
    left:0;
    width:200%;
    height:200%;
    transform:scale(.5);
    transform-origin:0 0;
    pointer-events:none;
    box-sizing:border-box;
    border:0 solid #e9eaec;
    border-top-width:0px
}
.i-card-footer{
    position:relative;
    padding:6px 16px 0;
    padding-top:0px;
    /* padding-bottom:16px; */
    color:#80848f;
    font-size:12px;
    margin-top:5px
}
