.i-tag{
    display:inline-block;
    height:18px;
    line-height:18px;
    padding:0 24rpx;
    border-radius:2px;
    background:#fff;
    font-size:11px;
    vertical-align:middle;
    border:1rpx solid #dddee1;
    visibility: visible;
}

.over{
  max-width: 298rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.i-tag-none{
    border-color:#fff
}
.i-tag-display-none{
  display: none;
  visibility: hidden;
}
