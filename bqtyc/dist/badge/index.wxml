<view class="i-class i-badge">
    <slot></slot>
    <view class="i-badge-dot" wx:if="{{ dot }}"></view>
    <view class="i-badge-count i-class-alone" wx:elif="{{ count !== 0 && finalCount !== -1}}">{{ finalCount }}</view>
    <view class="i-badge-count i-class-alone" wx:elif="{{ count == -1 }}"></view>
</view>
